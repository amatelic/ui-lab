---
// src/components/CodeExample.astro
import { Markdown } from "astro-remote";

interface Props {
    title: string;
    description: string;
    code: string;
}

const { title, description, code } = Astro.props;
---

<div class="code-example-container w-full min-h-128 !mb-8">
    <!-- Left Side: Markdown and Code -->
    <div class="markdown-section">
        <div class="p-2 py-4">
            <h3 class="text-xl font-bold">{title}</h3>
        </div>
        <div class="p-2 py-4">
            <p>
                {description}
            </p>
        </div>
        <!-- <Markdown content={description} /> -->

        <div class="code-block">
            <slot name="code">
                <Markdown content={code} />
            </slot>
        </div>
    </div>

    <!-- Right Side: Visual Example -->
    <div class="example-section">
        <slot />
    </div>
</div>

<style>
    .code-example-container {
        display: flex;
        border-radius: 8px;
        overflow: hidden;
        border: 1px dashed #ccc;
    }

    .markdown-section {
        flex: 2;
        padding: 1rem;
        background: #f9f9f9;
        border-right: 1px dashed #ccc;
    }

    .example-section {
        flex: 3;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        position: relative;
    }

    .code-block {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
    }

    .code-block pre {
        margin: 0;
        white-space: pre-wrap;
    }

    @media (max-width: 768px) {
        .code-example-container {
            flex-direction: column;
            gap: 32px;
        }
        .markdown-section {
            border-right: none;
            border-bottom: 1px dashed #ccc;
        }
    }
</style>

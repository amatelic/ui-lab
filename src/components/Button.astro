<div>
    <button class="radio-button"> <slot /></button>
</div>

<script>
    import { animate } from "motion";
    function main() {
        // Elements
        const box = document.querySelector(".radio-button");

        if (!box) {
            return;
        }

        box.addEventListener("mouseover", () => {
            console.log("click");
            animate(box, { scale: 1.1 }, { type: "spring", stiffness: 300 });
        });
        box.addEventListener("click", () => {
            console.log("click");
            animate(
                box,
                { scale: 1.3 },
                { type: "spring", stiffness: 300, damping: 25 },
            );
            // animate(
            //     box,
            //     { scale: 1 },
            //     { type: "spring", stiffness: 300, damping: 25 },
            // );
        });
        box.addEventListener("mouseout", () => {
            console.log("click");
            animate(box, { scale: 1 }, { type: "spring", stiffness: 300 });
        });
    }
    main();
</script>


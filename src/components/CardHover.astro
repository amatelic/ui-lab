// CardComponent.astro
---

<div class="card bg-white rounded-md overflow-hidden border border-gray-200">
    <div class="leather"></div>
    <div class="inner-container flex justify-center">
        <slot />
    </div>
</div>

<style lang="postcss">

  .card {
    flex: 0 1 380px;
    height: 190px;
    cursor: pointer;
    position: relative;
    background: url(/leather-texture-bake.png);
    background-repeat: repeat;
    box-shadow:
        inset 0 1px 2px rgba(0,0,0,0.5),
        inset 0 -1px 4px rgba(0,0,0,0.2)
  }

      .card::before {
          content: "";
          position: absolute;
          top: 8px;      left: 8px;
          right: 8px;
          bottom: 8px;      border-radius: 4px;
          background:        /* Top stitches */
          repeating-linear-gradient(90deg, transparent, transparent 6px, rgba(255,255,255,0.7) 20px, rgba(255,255,255,0.7) 8px) 0 0/100% 2px no-repeat,
          repeating-linear-gradient(90deg, transparent, transparent 22px, rgba(255,255,255,0.7) 20px, rgba(255,255,255,0.7) 8px) 0 0/100% 2px no-repeat,        /* Bottom stitches */
          repeating-linear-gradient(90deg, transparent, transparent 22px, rgba(255,255,255,0.7) 20px, rgba(255,255,255,0.7) 8px) 0 100%/100% 2px no-repeat,        /* Left stitches */
          repeating-linear-gradient(180deg, transparent, transparent 6px, rgba(255,255,255,0.7) 20px, rgba(255,255,255,0.7) 8px) 0 0/2px 100% no-repeat,        /* Right stitches */
          repeating-linear-gradient(180deg, transparent, transparent 6px, rgba(255,255,255,0.7) 22px, rgba(255,255,255,0.7) 8px) 100% 0/2px 100% no-repeat;
          pointer-events: none;
      }

  .leather {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: linear-gradient(to bottom right, #cf6a17 30%, #b85e14);
  }


  .inner-container {
      width: 100%;
      height: 100%;
      z-index: 1;
      border-radius: 4px;
      opacity: 1;
      transform:  translateY(75%) scale(1);
      transition: transform 0.3s cubic-bezier( 0.165, 0.84, 0.44, 1 );
  }

  .card:hover .inner-container {
      opacity: 1;
      transform:  translateY(2%) scale(1);
  }
</style>
